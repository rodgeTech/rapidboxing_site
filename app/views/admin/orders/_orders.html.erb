<div class="row mt-3">
  <div class="col-md-12">
    <table class="table table-striped table-responsive-sm" id="orders_table">
      <thead class="title-light ">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Address</th>
          <th scope="col">Items</th>
          <th scope="col">Status</th>
          <th scope="col">Date</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <th scope="row">
              <%= link_to order.id, admin_order_path(order), class: "link text-secondary" %>
            </th>
            <td class="text-truncate">
              <% if order.user.present? %>
                <%= link_to order.user.name, admin_user_path(order.user), class: "link text-secondary" %>
              <% else %>
                <%= order.name %>
              <% end %>
            </td>
            <td><%= order.address %></td>
            <td><%= order.order_items.count %></td>
            <td>
              <%= order_status(order.status)  %>
            </td>
            <td>
              <%= order.created_at.strftime('%B %d') %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
