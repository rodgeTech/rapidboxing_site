<%= content_for(:page_title, 'Catalog') %>
<div class="mb-5">
  <div class="row mb-5">
    <div class="col-md-8">
      <div class="title title-md">Drafts <span class="title-light ml-3"><%= Order.where(draft: true).count %></span></div>
    </div>
    <div class="col-md-3 ml-auto text-right">
      <%= link_to "New Order", new_admin_orders_draft_path, class: "btn btn-md btn-success px-4"%>
    </div>
  </div>
  <% if @orders.any? ||  %>
    <%= render 'orders' %>
    <%= paginate @orders, :params => { :anchor => 'orders_table' } %>
  <% else %>
    <div class="text-center pt-5 border-top">
      <h3 class="title-light">No drafts...</h3>
    </div>
  <% end %>
</div>
