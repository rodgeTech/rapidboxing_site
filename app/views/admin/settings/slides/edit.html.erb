<%= content_for(:page_title, 'Edit Slide') %>
<div class="row">
  <div class="col-md-7 mx-auto">
    <div class="card p-4 mb-5">
      <div class="title title-md mb-4">Edit Slide</div>
      <%= simple_form_for [:admin, :settings, @slide], validate: true do |f| %>
        <%= f.input :main_title %>
        <%= f.input :sub_title %>
        <%= f.input :link_text%>
        <%= f.input :link_to %>
  
        <% if @slide.image.present? %>
          <div class="row">
              <div class="col-md-3">
                <%= image_tag @slide.image.image_url(:thumb), class: "my-3" %>
              </div>
          </div>
        <% end %>
        <%= f.input :image, as: :file, label: "Upload new image" %>
        <%= f.button :submit, class: "btn btn-primary btn-md px-5 my-3" %>
      <% end %>
    </div>
  </div>
</div>
