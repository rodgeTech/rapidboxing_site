<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://fonts.googleapis.com/css?family=Viga|Montserrat|Source+Sans+Pro&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'application' %>
  </head>
  <body class="<%= body_class %> application-body">
    <div id="modal-root"></div>
    <%= render 'layouts/header' %>
    <div class="main-content">
      <%= render 'layouts/flash' %>
      <%= yield %>
    </div>
    <script src="//code.tidio.co/6z4mj2gnarl6ucc61ngsbkw8qj0vkgz9.js" async></script>
    <%= render 'layouts/footer' %>
  </body>
</html>
