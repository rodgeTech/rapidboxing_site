<%= content_for(:page_title, 'Contact Us') %>
<section id="contact-cta-banner">
  <div class="banner-content">
    <div class="banner-header pt-5">
      <div class="title title-md text-white">
        <span class="border-bottom border-primary border-sm pb-2">Get In Touch</span>
      </div>
    </div>
    <div class="banner-body">
      <p class="lead text-white">Feel free to contact us anytime, we'd love nothing more than to hear from you.</p>
    </div>
  </div>
</section>
<section id="contact-details">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h4><i class="fas fa-phone"></i></h4>
        <p>Contact</p>
        <div class="info">
          <p><%= GeneralSetting.phone %></p>
          <p><%= GeneralSetting.contact_email %></p>
        </div>
      </div>
      <div class="col-md-3">
        <h4><i class="far fa-clock"></i></h4>
        <p>Hours</p>
        <div class="info">
          <p>Mon - Fri (8am - 5pm)</p>
          <p>Saturday (8am - 12pm)</p>
        </div>
      </div>
      <div class="col-md-3">
        <h4><i class="fas fa-map-marker-alt"></i></h4>
        <p>Local Address</p>
        <div class="info">
          <p><%= GeneralSetting.street %></p>
          <p><%= GeneralSetting.city %></p>
        </div>
      </div>
      <div class="col-md-3">
        <h4><i class="fas fa-flag-usa"></i></h4>
        <p>USA Address</p>
        <div class="info">
          <p>9500 NW 79 Ave, Suite 13<br/>
            Hialeah Gardens, FL 33016
            <p>
            </div>
          </div>
        </div>
      </div>
    </section>
    <div id="contact"></div>
    <%= javascript_pack_tag 'contact' %>
